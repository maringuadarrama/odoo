<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_view_form_preferences" model="ir.ui.view">
        <field name="name">hr.user.preferences.form.inherit.hr.fleet</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="hr.res_users_view_form_profile" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_open_employee_vehicles"
                    type="object" class="oe_stat_button"
                    icon="fa-car"
                    invisible="vehicle_count == 0"
                    groups="fleet.fleet_group_manager">
                    <field name="vehicle_count" widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>
</odoo>
