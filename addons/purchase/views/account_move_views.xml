<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_purchase" model="ir.ui.view">
        <field name="name">account.move.inherit.purchase</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="invoice_vendor_bill_id" position="after">
                <t groups="purchase.group_purchase_user">
                    <field name="purchase_order_id" readonly="state != 'draft'" invisible="1"  />
                    <label for="purchase_bill_union_id" string="Auto-Complete"
                        class="oe_edit_only"
                        invisible="state != 'draft' or move_type != 'in_invoice'" />
                    <field name="purchase_bill_union_id" nolabel="1"
                        placeholder="Select a purchase order or an old bill"
                        class="oe_edit_only"
                        readonly="state != 'draft'"
                        domain="partner_id and [('partner_id.commercial_partner_id', '=', commercial_partner_id)] or []"
                        context="{'show_total_amount': True}"
                        options="{'no_create': True, 'no_open': True}"
                        invisible="state != 'draft' or move_type != 'in_invoice'" />
                </t>
            </field>
            <label name="invoice_vendor_bill_id_label" position="attributes">
                <attribute name="groups">!purchase.group_purchase_user</attribute>
            </label>
            <field name="invoice_vendor_bill_id" position="attributes">
                <attribute name="groups">!purchase.group_purchase_user</attribute>
            </field>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='company_id']"
                position="after">
                <field name="purchase_line_ids"
                    column_invisible="True"
                    groups="purchase.group_purchase_user" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/list/field[@name='company_id']" position="after">
                <field name="purchase_line_ids"
                    column_invisible="True"
                    groups="purchase.group_purchase_user" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_purchase_matching"
                    type="object" class="oe_stat_button"
                    icon="fa-bullseye"
                    invisible="not partner_id or move_type not in ('in_invoice', 'in_refund') or hide_purchase_matching"
                    groups="purchase.group_purchase_user">
                    <div class="o_field_statinfo">
                        <span class="o_stat_text">Purchase Matching</span>
                    </div>
                </button>
                <button name="action_view_source_purchase_orders"
                    type="object" class="oe_stat_button"
                    groups="purchase.group_purchase_user"
                    icon="fa-pencil-square-o"
                    invisible="count_purchase_order == 0 or move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')">
                    <field name="count_purchase_order" string="Purchases"
                        widget="statinfo" />
                </button>
            </xpath>
        </field>
    </record>

</odoo>
