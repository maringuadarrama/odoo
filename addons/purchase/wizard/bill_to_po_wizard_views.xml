<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="bill_to_po_wizard_form" model="ir.ui.view">
        <field name="name">bill.to.po.wizard.form</field>
        <field name="model">bill.to.po.wizard</field>
        <field name="arch" type="xml">
            <form string="Add to PO">
                <sheet>
                    <group>
                        <field name="purchase_order_id"
                            placeholder="or create new"
                            domain="[('partner_id', '=', partner_id), ('state', '=', 'purchase')]"
                            context="{'show_total_amount': True}" />
                    </group>
                    <footer>
                        <button name="action_add_to_po" string="Add Products"
                            type="object"
                            invisible="not context.get('has_products')" />
                        <button name="action_add_downpayment" string="Add Down Payment"
                            type="object" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
