<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_product_search" model="ir.ui.view">
        <field name="name">sale.report.search</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <search string="Sales Analysis">
                <field name="partner_id" />
                <field name="product_id" />
                <field name="product_tmpl_id" />
                <field name="product_category_id" />
                <field name="user_id" />
                <field name="team_id" />
                <field name="country_id" />
                <field name="industry_id" />
                <group expand="0" string="Extended Filters">
                    <field name="product_category_id"
                        filter_domain="[('product_category_id', 'child_of', self)]" />
                    <field name="company_id"
                        groups="base.group_multi_company" />
                </group>
                <filter name="Quotations" string="Quotations"
                    domain="[('state', '=', 'draft')]" />
                <filter name="Sales" string="Sales Orders"
                    domain="[('state', 'not in', ('draft', 'cancel'))]" />
                <separator />
                <filter name="filter_year" string="Year"
                    date="date_order"
                    default_period="year"
                    invisible="1" />
                <filter name="filter_month" string="Order Date"
                    date="date_order"
                    default_period="month" />
                <filter name="filter_order_date_365" string="Order Date: Last 365 days"
                    domain="[('date_order', '&gt;=', (datetime.datetime.combine(context_today() + relativedelta(days=-365), datetime.time(0,0,0))).strftime('%Y-%m-%d %H:%M:%S'))]" />
                <separator />
                <filter name="to_invoice" string="To Invoice"
                    domain="[('line_invoice_state', '=', 'to do')]" />
                <filter name="fully_invoiced" string="Fully Invoiced"
                    domain="[('line_invoice_state', '=', 'done')]" />
                <group expand="1" string="Group By">
                    <filter name="Customer" string="Customer"
                        context="{'group_by': 'partner_id'}" />
                    <filter name="product_id" string="Product Variant"
                        context="{'group_by': 'product_id'}"
                        groups="product.group_product_variant" />
                    <filter name="product_tmpl_id" string="Product"
                        context="{'group_by': 'product_tmpl_id'}" />
                    <filter name="Category" string="Product Category"
                        context="{'group_by': 'product_category_id'}" />
                    <filter name="User" string="Salesperson"
                        context="{'group_by': 'user_id'}" />
                    <filter name="sales_channel" string="Sales Team"
                        context="{'group_by': 'team_id'}" />
                    <filter name="status" string="Status"
                        context="{'group_by': 'state'}" />
                    <filter name="company" string="Company"
                        context="{'group_by': 'company_id'}"
                        groups="base.group_multi_company" />
                    <separator />
                    <filter name="group_by_date" string="Order Date"
                        context="{'group_by': 'date_order'}"
                        invisible="context.get('sale_report_view_hide_date')" />
                    <filter name="group_by_date_day" string="Order Date"
                        context="{'group_by': 'date_order:day'}"
                        invisible="not context.get('sale_report_view_hide_date')" />
                </group>
            </search>
        </field>
    </record>

    <record id="view_order_product_pivot" model="ir.ui.view">
        <field name="name">sale.report.pivot</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <pivot string="Sales Analysis" sample="1">
                <field name="team_id" type="col" />
                <field name="date_order" interval="month" type="row" />
                <field name="price_subtotal" type="measure" />
            </pivot>
        </field>
    </record>

    <record id="view_order_product_graph" model="ir.ui.view">
        <field name="name">sale.report.graph</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <graph string="Sales Analysis" type="line" sample="1">
                <field name="date_order" interval="day" />
                <field name="price_subtotal" type="measure" />
            </graph>
        </field>
    </record>

    <record id="sale_report_graph_pie" model="ir.ui.view">
        <field name="name">sale.report.graph.pie</field>
        <field name="model">sale.report</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="view_order_product_graph" />
        <field name="arch" type="xml">
            <graph position="attributes">
                <attribute name="type">pie</attribute>
            </graph>
        </field>
    </record>

    <record id="sale_report_graph_bar" model="ir.ui.view">
        <field name="name">sale.report.graph.bar</field>
        <field name="model">sale.report</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="view_order_product_graph" />
        <field name="arch" type="xml">
            <graph position="attributes">
                <attribute name="type">bar</attribute>
                <attribute name="order">DESC</attribute>
            </graph>
        </field>
    </record>

    <record id="sale_report_view_tree" model="ir.ui.view">
        <field name="name">sale.report.view.list</field>
        <field name="model">sale.report</field>
        <field name="arch" type="xml">
            <list string="Sales Analysis" action="action_open_order" type="object">
                <field name="date_order" optional="show" />
                <field name="order_reference" optional="show" />
                <field name="partner_id" optional="show" />
                <field name="product_category_id" optional="show" />
                <field name="product_id" string="Product" optional="show" />
                <field name="product_uom_qty" string="Quantity" sum="Sum of Quantity" />
                <field name="price_unit" widget="monetary" avg="Average" />
                <field name="qty_transfered" sum="Sum of Qty Received" optional="hide" />
                <field name="qty_invoiced" sum="Sum of Qty Invoiced" optional="hide" />
                <field name="price_subtotal" optional="hide" sum="Sum of Untaxed Total" />
                <field name="price_total" optional="show" sum="Sum of Total" />
                <field name="pricelist_id" optional="hide" />
                <field name="state" widget="badge" optional="hide" />
                <field name="line_invoice_state" widget="badge" optional="hide" />
                <field name="user_id" widget="many2one_avatar_user" optional="show" />
                <field name="team_id" optional="hide" />
                <field name="currency_id" column_invisible="True" />
                <field name="company_id" optional="show" groups="base.group_multi_company" />
            </list>
        </field>
    </record>

    <record id="action_order_report_all" model="ir.actions.act_window">
        <field name="name">Sales Analysis</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">graph,pivot,list,form</field>
        <field name="view_id" />  <!-- force empty -->
        <field name="search_view_id" ref="view_order_product_search" />
        <field name="domain">[('state', '!=', 'cancel')]</field>
        <field name="context">{
            'search_default_Sales':1,
            'search_default_filter_order_date_365': 1,
            'group_by': [],
        }</field>
        <field
            name="help"
        >This report performs analysis on your quotations and sales orders. Analysis
            check your sales revenues and sort it by different group criteria (salesman, partner,
            product, etc.) Use this report to perform analysis on sales not having invoiced yet. If
            you want to analyse your turnover, you should use the Invoice Analysis report in the
            Accounting application.</field>
    </record>

