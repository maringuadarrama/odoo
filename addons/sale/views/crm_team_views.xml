<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="crm_team_view_kanban_dashboard" model="ir.ui.view">
        <field name="name">crm.team.view.kanban.dashboard.inherit.sale</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_kanban_dashboard" />
        <field name="arch" type="xml">
            <xpath expr="//templates" position="before">
                <field name="invoiced_target" />
            </xpath>
            <xpath expr="//t[@name='second_options']" position="after">
                <div class="row" t-if="record.count_quotations.raw_value">
                    <a name="%(action_quotations_salesteams)d"
                        type="action" class="col"
                        context="{'search_default_draft': True, 'search_default_sent': True}">
                        <field name="count_quotations" class="me-1" />
                        <t t-if="record.count_quotations.raw_value == 1">Quotation</t>
                        <t t-else="">Quotations</t>
                    </a>
                    <field class="col-auto text-truncate" name="amount_quotations" widget="monetary" />
                </div>
                <div class="row" name="orders_to_invoice" t-if="record.count_sales_to_invoice.raw_value">
                    <a name="%(action_orders_to_invoice_salesteams)d"
                        type="action" class="col-8">
                        <field name="count_sales_to_invoice" class="me-1" />
                        <t t-if="record.count_sales_to_invoice.raw_value == 1">Order to Invoice</t>
                        <t t-else="">Orders to Invoice</t>
                    </a>
                </div>
            </xpath>
            <xpath expr="//div[@name='o_kanban_primary_bottom']" position="after">
                <t groups="sales_team.group_sale_manager">
                    <div class="col-12 o_dashboard_bottom_block mt-2">
                        <field name="amount_invoiced_taxexc" widget="sales_team_progressbar"
                            title="Invoicing"
                            options="{
                                'current_value': 'amount_invoiced_taxexc',
                                'max_value': 'invoiced_target',
                                'editable': true,
                                'edit_max_value': true,
                                'on_change': 'update_invoiced_target'
                            }" />
                    </div>
                </t>
            </xpath>
            <xpath expr="//div[@name='manage_view']" position="inside">
                <div>
                    <a name="%(action_orders_salesteams)d" type="action">Sales Orders</a>
                </div>
                <div groups="account.group_account_invoice">
                    <a name="%(action_invoice_salesteams)d" type="action">Invoices</a>
                </div>
            </xpath>
            <div name="o_team_kanban_report_separator" position="before">
                <div name="sales_report">
                    <a name="%(action_order_report_so_salesteam)d" type="action">Sales</a>
                </div>
                <div groups="account.group_account_invoice" name="invoices_report">
                    <a name="%(action_account_invoice_report_salesteam)d" type="action">Invoices</a>
                </div>
            </div>
        </field>
    </record>

    <record id="crm_team_salesteams_view_form" model="ir.ui.view">
        <field name="name">crm.team.form</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form" />
        <field name="priority">9</field>
        <field name="arch" type="xml">
            <field name="company_id" position="after">
                <label for="invoiced_target" />
                <div class="o_row" id="invoiced_target">
                    <field name="invoiced_target" widget="monetary"
                        class="oe_inline"
                        options="{'currency_field': 'currency_id'}" />
                    <span class="flex-grow-1">/ Month</span>
                </div>
            </field>
        </field>
    </record>

    <record id="sales_team.mail_activity_type_action_config_sales" model="ir.actions.act_window">
        <field name="domain"
        >['|', ('res_model', '=', False), ('res_model', 'in', ['sale.order', 'res.partner', 'product.template', 'product.product'])]</field>
    </record>

</odoo>
