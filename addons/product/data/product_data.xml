<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <!-- Categories -->
    <record id="product_category_goods" model="product.category">
        <field name="name">Goods</field>
    </record>

    <record id="product_category_expenses" model="product.category">
        <field name="name">Expenses</field>
    </record>

    <record id="product_category_services" model="product.category">
        <field name="name">Services</field>
    </record>

    <!-- Precisions -->
    <record id="decimal_price" model="decimal.precision" forcecreate="True">
        <field name="name">Product Price</field>
        <field name="digits">2</field>
    </record>

    <record id="decimal_discount" model="decimal.precision" forcecreate="True">
        <field name="name">Discount</field>
        <field name="digits">2</field>
    </record>

    <record id="decimal_stock_weight" model="decimal.precision" forcecreate="True">
        <field name="name">Stock Weight</field>
        <field name="digits">2</field>
    </record>

    <record id="decimal_volume" model="decimal.precision" forcecreate="True">
        <field name="name">Volume</field>
        <field name="digits">2</field>
    </record>
</odoo>
