<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_attribute_search" model="ir.ui.view">
        <field name="name">product.attribute.view.search</field>
        <field name="model">product.attribute</field>
        <field name="arch" type="xml">
            <search>
                <filter name="inactive"
                    string="Inactive"
                    domain="[('active', '=', False)]" />
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="attribute_tree_view" model="ir.ui.view">
        <field name="name">product.attribute.list</field>
        <field name="model">product.attribute</field>
        <field name="arch" type="xml">
            <list string="Variant Values">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="display_type" />
                <field name="create_variant" />
            </list>
        </field>
    </record>

    <record id="product_attribute_view_form" model="ir.ui.view">
        <field name="name">product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="arch" type="xml">
            <form string="Product Attribute">
                <field name="count_product_tmpl_ids" invisible="1" />
                <sheet>
                    <widget name="web_ribbon"
                        title="Archived"
                        bg_color="text-bg-danger"
                        invisible="active" />
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_product_template_attribute_lines"
                            type="object" class="oe_stat_button"
                            icon="fa-bars"
                            invisible="not count_product_tmpl_ids">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    <field name="count_product_tmpl_ids" />
                                </span>
                                <span class="o_stat_text">Products</span>
                            </div>
                        </button>
                    </div>
                    <group name="main_fields">
                        <group name="sale_main_fields">
                            <label for="name" string="Attribute Name" />
                            <field name="name" nolabel="1" />
                            <field name="display_type" widget="radio"
                                options="{'horizontal': True}" />
                            <field name="create_variant" widget="radio"
                                force_save="1"
                                readonly="count_product_tmpl_ids != 0 or display_type == 'multi'"
                                options="{'horizontal': True}" />
                        </group>
                    </group>
                    <notebook>
                        <page name="attribute_values" string="Attribute Values">
                            <field name="value_ids" widget="pavs_one2many" nolabel="1">
                                <list string="Values" editable="bottom">
                                    <field name="sequence" widget="handle" />
                                    <field name="name" />
                                    <field name="display_type"
                                        column_invisible="True" />
                                    <field name="is_custom"
                                        width="120px"
                                        column_invisible="parent.display_type == 'multi'" />
                                    <field name="html_color" widget="color"
                                        invisible="image"
                                        column_invisible="parent.display_type != 'color'" />
                                    <field name="image" widget="image"
                                        options="{'size': [70, 70]}"
                                        class="oe_avatar text-start float-none"
                                        column_invisible="parent.display_type != 'color'" />
                                    <field name="default_extra_price" width="160px" />
                                    <button name="action_add_to_products" string="Add to products"
                                        type="object"
                                        icon="fa-plus"
                                        invisible="pav_attribute_line_ids"
                                        column_invisible="parent.count_product_tmpl_ids &lt; 1" />
                                    <button name="action_update_prices" string="Update extra prices"
                                        type="object"
                                        icon="fa-refresh"
                                        invisible="not pav_attribute_line_ids or not default_extra_price_changed"
                                        column_invisible="parent.count_product_tmpl_ids &lt; 1" />
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="attribute_action" model="ir.actions.act_window">
        <field name="name">Attributes</field>
        <field name="res_model">product.attribute</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
